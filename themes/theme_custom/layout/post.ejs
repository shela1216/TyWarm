<style>
    ul.popular-posts {
        margin-left: 0;
        margin-right: 0;
        padding-left: 0;
        list-style: none;
    }

    li.popular-posts-item {
        font-size: 16px;
        width: 100%;
        display: inline-block;
        vertical-align: top;
        box-sizing: border-box;
    }

    .popular-posts-title h3 {
        font-size: 16px;
        margin-top: 10px;
        margin-bottom: 10px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;

    }

    .popular-posts-title a::before {
        content: "\f02d";
        font-family: fontawesome;
        margin-right: 10px;
    }

    .popular-posts-excerpt p {
        font-size: 12px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        margin-bottom: 10px;
        font-size: 85%;
    }
</style>
<section class="col-md-8">
    <article>
        <div class="kratos-hentry kratos-post-inner clearfix">
            <header class="kratos-entry-header">
                <% if (page.title) { %>
                    <h1 class="kratos-entry-title text-center">
                        <%- page.title %>
                    </h1>
                    <% } %>
                        <% if (page.subtitle) { %>
                            <h2 class="text-center">
                                <%- page.subtitle %>
                            </h2>
                            <% } %>
                                <ul class="kratos-post-meta text-center">
                                    <li><i class="fa fa-calendar"></i>
                                        <%- date(page.date, null) %>
                                    </li>
                                    <li><i class="fa fa-user"></i>
                                        <%- __('author') %>
                                            <%- page.author || config.author %>
                                    </li>
                                    <li>
                                        <i class="fa fa-edit"></i>
                                        <% const wordsCount=strip_html(page.content).length; %>
                                            <% if (wordsCount < 1500) { %>
                                                <%= wordsCount %>
                                                    <% } else { %>
                                                        ~<%= (wordsCount / 1000).toFixed(2) %>K
                                                            <% } %>
                                                                <%- __('words') %>
                                    </li>
                                    <% if (/[vw]aline/.test(theme.posts.comments) &&
                                        theme[theme.posts.comments].visitor) { %>
                                        <li id="<%- url_for(page.path) %>" class="leancloud_visitors"
                                            data-flag-title="<%- page.title %>">
                                            <i class="fa fa-eye"></i>
                                            <%- __('read_count', '<span class="leancloud-visitors-count"> </span>' ) %>
                                        </li>
                                        <% if (theme.posts.comments==='waline' ) { %>
                                            <li>
                                                <i class="fa fa-commenting-o"></i>
                                                <%- __('comments_count', '<span data-xid="' + url_for(page.path)
                                                    + '" class="waline-comment-count"> </span>' ) %>
                                            </li>
                                            <% } %>
                                                <% } %>
                                </ul>
            </header>
            <div class="kratos-post-content">
                <div id="expire-alert" class="alert alert-warning hidden" role="alert">
                    <%- __('last_modify_alert', '<time datetime="' + page.updated + '"></time>' ) %>
                </div>
                <% if (page.toc && strip_html(toc(page.content))) { %>
                    <div class="kratos-post-inner-toc">
                        <%- toc(page.content) %>
                    </div>
                    <% } %>
                        <hr />
                        <%- page.content %>
            </div>
            <% if (theme.posts.show_cc) { %>
                <div class="kratos-copyright text-center clearfix">
                    <h5>
                        <%- __('use_cc4_license') %>
                    </h5>
                </div>
                <% } %>
                    <footer class="kratos-entry-footer clearfix">
                        <% if (theme.posts.donate || theme.posts.share) { %>
                            <div class="post-like-donate text-center clearfix" id="post-like-donate">
                                <% if (theme.posts.donate) { %>
                                    <a class="donate" href="javascript:;"><i class="fa fa-bitcoin"></i>
                                        <%- __('reward') %>
                                    </a>
                                    <% } %>
                                        <% if (theme.posts.share) { %>
                                            <a class="share" href="javascript:;"><i class="fa fa-share-alt"></i>
                                                <%- __('share') %>
                                            </a>
                                            <%- partial('_tools/share', {page: page}) %>
                                                <% } %>
                            </div>
                            <% } %>
                                <div class="footer-tag clearfix">
                                    <div class="pull-left">
                                        <i class="fa fa-tags"></i>
                                        <%- list_tags(page.tags, { show_count: false, style: 'none' }) %>
                                    </div>
                                    <div class="pull-date">
                                        <span>
                                            <%- __('last_modify') %>
                                                <%- date(page.updated) %>
                                        </span>
                                    </div>

                                </div>

                    </footer>
        </div>
        <div class="kratos-hentry kratos-post-inner clearfix">
            <div class="kratos-post-content">
                <h2 class="title-h2 text-center">
                    看更多
                </h2>
                <%- popular_posts( {maxCount: 5 , ulClass: 'popular-posts' , PPMixingRate: 0.5 } , page ) %>
                    <!-- <img src="https://i.imgur.com/Gkvn48L.jpg" alt=""> -->
                    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <ins class="adsbygoogle" style="display:block" data-ad-format="fluid"
                        data-ad-layout-key="-fb+5w+4e-db+86" data-ad-client="ca-pub-6405825983604772"
                        data-ad-slot="2938434939"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
            </div>

        </div>
        <% if (page.prev || page.next) { %>
            <nav class="navigation post-navigation clearfix" role="navigation">
                <% if (page.next) { %>
                    <div class="nav-previous clearfix">
                        <a title=" <% if (page.next.title){ %><%= page.next.title %><% } else { %>(<%- __('no_title') %>)<% } %>"
                            href="<%- config.root + page.next.path %>">&lt; <%- __('newer') %></a>
                    </div>
                    <% } %>
                        <% if (page.prev) { %>
                            <div class="nav-next clearfix">
                                <a title=" <% if (page.prev.title){ %><%= page.prev.title %><% } else { %>(<%- __('no_title') %>)<% } %>"
                                    href="<%- config.root + page.prev.path %>">
                                    <%- __('older') %> &gt;
                                </a>
                            </div>
                            <% } %>

            </nav>

            <% } %>
                <% if (theme.posts.comments && page.comments && !page.link) { %>
                    <%- partial('_comments/' + theme.posts.comments) %>
                        <% } %>
    </article>
</section>